            "console": "integratedTerminal", 
            "justMyCode": false, 
            "cwd": "${workspaceFolder}${pathSeparator}Month_1${pathSeparator}WeekEnd${pathSeparator}Week4", 
            // Month 1 Week 4
            "env": {"CUDA_VISIBLE_DEVICES":"0"}, 
            // "args": [
            //     "--arg1", "arg1_value",
            //     "--arg2", "arg2_value",
            // ] //주석 단축키 cmd+/
        },
        {
            "name": "Python : homework", 
            "type": "python", 
